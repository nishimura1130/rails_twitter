
<footer>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>
<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= link_to '詳細を確認する', post_path(post.id) %></td>
    <td><%= link_to "ブログを編集する", edit_post_path(post.id) %></td>
    <td><%= link_to 'ブログを削除する', post_path(post.id), method: :delete %></td>
  </tr>
<% end %>
</table>
<a href="/posts">ブログ一覧画面に戻る</a>
<%= link_to 'ブログ一覧画面に戻る', '/posts' %>
<br>
<%= link_to '新しくブログを投稿する', new_post_path %>
</footer> 



